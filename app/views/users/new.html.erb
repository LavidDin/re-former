<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>There were: <%= pluralize(@user.errors.count, "error") %> in creating your account</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%= form_for @user do |f| %>
    Username: <%= f.text_field :username, placeholder: "sampleuser" %><br />

    E-mail: <%= f.email_field :email, placeholder: "someone@example.com" %><br />

    Password: <%= f.password_field :password %><br />

    <%= f.submit "Create" %>
  <% end %>